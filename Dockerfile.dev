# Development Dockerfile for hot reloading
FROM node:22-alpine

WORKDIR /app

# Copy package files
COPY frontend/package*.json ./

# Install dependencies (use npm install instead of npm ci for dev)
RUN npm install

# Copy source code
COPY frontend/ .

# Expose port
EXPOSE 5173

# Start development server
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]